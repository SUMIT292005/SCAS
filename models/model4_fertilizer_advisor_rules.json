    "thresholds": {
      "N": {
        "low": "<50",
        "medium": "50–100",
        "high": ">100"
      },
      "P": {
        "low": "<30",
        "medium": "30–60",
        "high": ">60"
      },
      "K": {
        "low": "<40",
        "medium": "40–80",
        "high": ">80"
      },
      "pH": {
        "acidic": "<6.0",
        "neutral": "6.0–7.5",
        "alkaline": ">7.5"
      }
    },
    "weather_rules": {
      "apply_only_if": {
        "rain_mm_day": "< 10",
        "temperature_c": "15–35",
        "humidity_pct": "< 85 for foliar"
      },
      "delay_if": {
        "rain_mm_day": ">= 20",
        "temperature_c": ">= 40 or <= 10",
        "humidity_pct": ">= 90 for foliar"
      }
    },
    "notes": [
      "These are rule-of-thumb suggestions for academic use. Local agronomy guides should take precedence.",
      "Legumes fix nitrogen; nitrogen recommendations are conservative for pulses.",
      "For alkaline soils, prefer SSP over DAP for phosphorus and consider elemental sulfur or ammonium sulfate."
    ]
